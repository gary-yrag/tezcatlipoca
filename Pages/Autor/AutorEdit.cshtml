@page "{Id:int}"
@using System.Collections.Generic;
@using cdcore5.Domain.Entity;
@model cdcore5.Pages.AutorEditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Editar autor";
}

<div class="text-center">
    <h1 class="display-4">Editar autor</h1>
    <form method="POST">
        <div asp-validation-sumary="All"></div>
    <div>
        <input asp-for="autore.Id" type="hidden">
        <label>Nombre</label>
        <input  asp-for="autore.Nombre"/>
        <span asp-validation-for="autore.Nombre"></span>
        <label>Apellidos</label>
        <input asp-for="autore.Apellidos"/>
        <span asp-validation-for="autore.Apellidos"></span>
        <button type="submit">Guardar</button>
    </div>
    </form>  
</div>
