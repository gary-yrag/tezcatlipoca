@page
@using System.Collections.Generic;
@using cdcore5.Domain.Entity;
@model cdcore5.Pages.AutorlibroNewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Relacion libros con autores";
}
 <form method="POST">

    <h1 class="display-4">Relacionar Autores y libros</h1>
    <div class="row">
        <div class="col-md-4">
                <div asp-validation-sumary="All" ></div>                                 
                <div class="form-group">
                    <label class="control-label" asp-for="libro.LibrosIsbn"></label>
                    <select asp-for="libro.LibrosIsbn" class="form-control" asp-items="@Model.selectLibrosSL"></select>
                    <span asp-validation-for="libro.LibrosIsbn" class="text-danger"></span>
                </div>               

                <div class="form-group">
                    <label class="control-label" asp-for="libro.AutoresId"></label>
                    <select asp-for="libro.AutoresId" class="form-control" asp-items="@Model.selectAutoresSL"></select>
                    <span asp-validation-for="libro.AutoresId" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <input type="submit" value="Guardar"/>
                </div>    
        </div>  
    </div>
 </form>