@page
@using System.Collections.Generic;
@using cdcore5.Domain.Entity;
@model cdcore5.Pages.LibroListModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Libros";
}
<div class="text-center">
    <h1 class="display-4">Lista de libros</h1>    
    <a asp-page="/Libro/LibroNew" class="btn btn-outline-info" >Nuevo libro</a>
    <div class="table-responsive">
        <form method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>ISBN</th>
                    <th>Editorial</th>
                    <th>Titulo</th>     
                    <th>Sinopsis </th>                    
                    <th>Nro Paginas </th>
                    <th>Edit </th>                  
                    <th>Delete </th>
                </tr>
            </thead>
            <tbody>
            
                @foreach (var item in Model.au)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Isbn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Editoriales.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sinopsis)
                    </td>    
                      <td>
                        @Html.DisplayFor(modelItem => item.NPaginas)
                    </td>            
                    <td class="text-center">
                        <a asp-page="/Libro/LibroEdit" class="btn btn-outline-primary"  asp-route-id="@item.Isbn">Edit</a>                        
                    </td>                    
                    <td class="text-center">
                        <button type="submit" class="btn btn-outline-danger" asp-route-id ="@item.Isbn" asp-page-handler="delete">Delete</button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        </form>
    </div>   
</div>
